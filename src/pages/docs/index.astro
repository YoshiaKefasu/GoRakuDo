function processArticleContent(content: string) {
  if (!content) return { 
    cleanedText: "",
    hasCode: false,
    hasImages: false,
    hasSections: false
  }

  // HTMLå½¢å¼ã®ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‹ã‚‰ãƒ†ã‚­ã‚¹ãƒˆã‚’æŠ½å‡ºï¼ˆAstroãƒã‚¤ãƒ†ã‚£ãƒ–å‡¦ç†æ¸ˆã¿ï¼‰
  const cleanedText = content
    .replace(/<[^>]*>/g, " ") // Remove HTML tags
    .replace(/&[^;]+;/g, " ") // Remove HTML entities
    .replace(/\n+/g, " ") // Replace newlines with spaces
    .replace(/\s+/g, " ") // Normalize spaces
    .trim()

  return {
    cleanedText,
    hasCode: /<pre|<code/.test(content), // HTMLå½¢å¼ã®ã‚³ãƒ¼ãƒ‰ãƒ–ãƒ­ãƒƒã‚¯æ¤œå‡º
    hasImages: /!\[.*?\]\(.*?\)/.test(content),
    hasSections: /^#{1,6}\s+/.test(content)
  }
}

// Phase 3: Content Layer - Optimized search data generation
