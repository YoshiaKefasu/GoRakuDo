  @media (max-width: 320px) {
    .breadcrumb-pill {
      padding: 0.25rem clamp(0.25rem, 6vw, 0.625rem); /* Responsive padding: 4px to 10px */
      gap: 0.25rem;
      font-size: 0.75rem; /* 12px - maintain minimum readability */
