    }

    .tools-grid .tool-grid-item .tool-name {
      font-size: 1.5rem; /* „É´„Éº„ÉàË¶ÅÁ¥†„Å´Áõ∏ÂØæ - REMÂçò‰Ωç */
    }

    .tools-grid .tool-grid-item .tool-description-card {
      -webkit-line-clamp: 3;
      font-size: 0.875rem; /* „É´„Éº„ÉàË¶ÅÁ¥†„Å´Áõ∏ÂØæ - REMÂçò‰Ωç */
    }
  }

  @media (width >= 640px) and (width < 1024px) {
    .tools-grid {
      padding: 0 1.5rem;
    }
  }

  @media (width >= 1024px) {
    .tools-grid {
      padding: 0 2rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .tool-card,
    .tool-card:hover .tool-icon-image,
    .animation-scale:hover,
    .animation-slide:hover,
    .animation-fade:hover,
    .group:hover .tool-arrow {
      opacity: 1;
