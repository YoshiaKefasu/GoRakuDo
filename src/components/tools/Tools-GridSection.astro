    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media (width >= 768px) {
    .tools-grid .tool-grid-item .tool-card-footer {
      padding-top: 0.5rem;
    }
  }

  @media (width >= 1024px) {
