    width: 100%;
    min-height: 4rem;
  }

  @media (width >= 640px) {
    .tools-grid .tool-grid-item .tool-title-container {
      gap: var(--spacing-lg);
    }
  }

  @media (width >= 768px) {
    .tools-grid .tool-grid-item .tool-title-container {
      gap: var(--spacing-lg);
    }
  }

  /* ========== „Ç¢„Ç§„Ç≥„É≥ ========== */
  .tools-grid .tool-grid-item .tool-icon {
