    }
  }

  /* ========== „Ç§„É≥„Çø„É©„ÇØ„Ç∑„Éß„É≥ ========== */
  .group:hover .tool-arrow {
    transform: translateX(var(--tool-arrow-translate));
  }

  .tools-grid .tool-grid-item .animation-scale:hover {
    transform: scale(var(--tool-card-scale));
  }

  .tools-grid .tool-grid-item .animation-slide:hover {
    transform: translateX(var(--tool-arrow-translate));
  }

  .tools-grid .tool-grid-item .animation-fade:hover {
    opacity: var(--tool-card-opacity);
  }

  /* ========== „Ç´„Éº„Éâ„Éõ„Éê„Éº„Ç®„Éï„Çß„ÇØ„Éà ========== */
  .tool-card {
    overflow: hidden;
    border-radius: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .tool-card:hover {
    box-shadow:
      0 20px 40px -10px oklch(0% 0 0deg / 30%),
      0 8px 16px -4px oklch(0% 0 0deg / 15%);
    transform: translateY(-6px);
  }

  .tool-card:hover .tool-icon {
    background: transparent;
    box-shadow: none;
    filter: drop-shadow(0 6px 12px oklch(0% 0 0deg / 40%));
    transform: scale(1.05);
  }

  /* ========== „Ç¢„ÇØ„Çª„Ç∑„Éì„É™„ÉÅEÔøΩÔøΩ ========== */
