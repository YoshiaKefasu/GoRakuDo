    display: flex;
    flex-grow: 1;
    flex-direction: column;
    justify-content: flex-start;
    min-height: 0;
    padding-bottom: 1rem;
  }

  .tools-grid .tool-grid-item .tool-description-card {
    display: -webkit-box;
    flex-grow: 1;
    flex-shrink: 1;
    margin: 0;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    font-size: 0.875rem; /* „É´„Éº„ÉàË¶ÅÁ¥†„Å´Áõ∏ÂØæ - REMÂçò‰Ωç */
    font-weight: 400;
    line-height: 1.5;
    color: oklch(88% 0 0deg);
  }

  @media (width >= 640px) {
    .tools-grid .tool-grid-item .tool-description-card {
      font-size: var(--fs-base);
    }
  }

  /* ========== „Éï„ÉÉ„Çø„Éº ========== */
