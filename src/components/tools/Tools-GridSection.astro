  }

  /* ========== „Ç∞„É™„ÉÉ„Éâ„É¨„Ç§„Ç¢„Ç¶„Éà ========== */
  .tools-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    align-items: start;
    justify-content: center;
    width: 100%;
    max-width: 75rem; /* 1200px */
  }

  @media (width >= 640px) {
    .tools-grid {
