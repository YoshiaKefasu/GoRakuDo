    }

    init(starsConfig: any = {}) {
      // â˜…â˜…â˜… handleResizeã‚’å¤§å¹…ã«ç°¡ç•¥åŒ– â˜…â˜…â˜…
      const handleResize = () => {
        // CSSãŒè¦ç´ ã®ã‚µã‚¤ã‚ºã‚’ç®¡ç†ã™ã‚‹ã®ã§ã€JSã¯æç”»è§£åƒåº¦ã‚’æ›´æ–°ã™ã‚‹ã ã‘
        this.updateDimensions();
      };

      // æœ€åˆã®ãƒ­ãƒ¼ãƒ‰æ™‚ã«ä¸€åº¦å®Ÿè¡Œ
      handleResize();

      // visualViewportã®resizeã‚¤ãƒ™ãƒ³ãƒˆã‚’ç›£è¦–
      if (window.visualViewport) {
